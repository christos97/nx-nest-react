rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read: if request.auth.uid != null && request.auth.uid == userId;
      allow write: if request.auth.uid != null && request.auth.uid == userId;

      match /charts/{document=**} {
        allow read: if request.auth.uid != null && request.auth.uid == userId;
        allow write: if false;
      }

      match /notifications/{document=**} {
        allow read: if request.auth.uid == userId && resource != null;
        allow write: if request.auth.uid == userId;
      }

      match /mediaLinks/{document=**} {
        allow read: if request.auth.uid != null && request.auth.uid == userId;
        allow write: if false;
      }
    }

    match /form-specs/{document=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
