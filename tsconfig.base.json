{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "target": "ES2020",
    "module": "esnext",
    "lib": ["ES2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ntua-saas-10/api-interfaces": ["libs/api-interfaces/src/index.ts"],
      "@ntua-saas-10/database": ["libs/database/src/index.ts"],
      "@ntua-saas-10/firebase-admin": ["libs/firebase-admin/src/index.ts"],
      "@ntua-saas-10/firebase-auth": ["libs/firebase-auth/src/index.ts"],
      "@ntua-saas-10/i18n-stream": ["libs/i18n-stream/src/index.ts"],
      "@ntua-saas-10/web/data-access": ["libs/web/data-access/src/index.ts"],
      "@ntua-saas-10/web/env": ["libs/web/env/src/index.ts"],
      "@ntua-saas-10/web/features": ["libs/web/features/src/index.ts"],
      "@ntua-saas-10/web/firebase": ["libs/web/firebase/src/index.ts"],
      "@ntua-saas-10/web/ui": ["libs/web/ui/src/index.ts"],
      "@ntua-saas-10/web/utils": ["libs/web/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
