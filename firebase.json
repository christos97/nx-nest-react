{
  "hosting": {
    "public": "./dist/apps/web",
    "rewrites": [
      {
        "source": "**",
        "destination": "./dist/apps/web/index.html"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "singleProjectMode": true,
    "auth": {
      "port": 9999
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "storage": {
      "port": 9199,
      "enabled": true
    },
    "ui": {
      "enabled": true
    }
  },
  "extensions": {
    "storage-resize-images": "firebase/storage-resize-images@0.1.36"
  }
}
