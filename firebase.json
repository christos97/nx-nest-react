{
  "hosting": {
    "public": "./dist/apps/web",
    "rewrites": [
      {
        "source": "**",
        "destination": "./dist/apps/web/index.html"
      }
    ],
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": ["node_modules", ".git", "firebase-debug.log", "firebase-debug.*.log"],
      "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run build"]
    }
  ],
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "singleProjectMode": true,
    "auth": {
      "port": 9999,
      "enabled": true
    },
    "functions": {
      "port": 5001,
      "enabled": false
    },
    "firestore": {
      "port": 8080,
      "enabled": true
    },
    "storage": {
      "port": 9199,
      "enabled": true
    },
    "ui": {
      "enabled": true
    }
  },
  "extensions": {
    "storage-resize-images": "firebase/storage-resize-images@0.1.36"
  }
}
